<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment" android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="70dp"
        android:drawableLeft="@drawable/key_login"
        android:drawablePadding="10dp"
        android:hint="Name"
        android:padding="13dp"
        android:elevation="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColorHint="@color/light_black"
        android:textColor="@color/black"
        ></EditText>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="150dp"
        android:drawableLeft="@drawable/email_register"
        android:drawablePadding="10dp"
        android:padding="13dp"
        android:elevation="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Email"
        android:textColorHint="@color/light_black"
        android:textColor="@color/black"

        ></EditText>
    <EditText
        android:id="@+id/password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="230dp"
        android:drawableLeft="@drawable/user_login"
        android:drawablePadding="10dp"
        android:padding="13dp"
        android:elevation="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:textColorHint="@color/light_black"
        android:inputType="textPassword"
        ></EditText>


    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/button_bg"

        android:text="Sing up"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have An Account?"
        android:layout_marginTop="400dp"
        android:textColor="@color/black"
        android:layout_marginLeft="170dp"
        />
    <TextView
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="335dp"
        android:text="Sing In"

        android:textStyle="bold"
        android:textColor="#A55183"
        />
</FrameLayout>