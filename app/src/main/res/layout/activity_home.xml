<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity" android:background="@color/white"
    android:id="@+id/drawer"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bacano"

            app:title="Barra de Navegacion"
            app:titleTextColor="@color/white" />

        <ru.nikartm.support.ImageBadgeView
            android:id="@+id/cart_badge_img"
            android:layout_width="40dp"
            android:layout_height="40dp"


            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            app:ibv_badgeLimitValue="false"
            app:ibv_badgeTextColor="#ffffff"
            app:ibv_badgeTextSize="13sp"
            app:ibv_badgeTextStyle="bold"
            app:ibv_badgeValue="0"
            app:ibv_fixedBadgeRadius="11dp" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"

            />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menu"
        app:menu="@menu/icon_menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"
        android:backgroundTint="@color/bacano"


        app:headerLayout="@layout/navheader"
        android:layout_gravity="start"
        />


</androidx.drawerlayout.widget.DrawerLayout>